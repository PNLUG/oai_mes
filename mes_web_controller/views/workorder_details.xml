<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="workorder_details">
        <script type="text/javascript" src="/mes_web_controller/static/src/js/mes_web_controller.js"></script>
        <script type="text/javascript" src="/mes_web_controller/static/src/js/workorder_details.js"></script>
        <link rel="stylesheet" href="/mes_web_controller/static/src/css/mes_controller.css"/>
        <t t-call="web.html_container">
            <t class="container">
                <t>vista workorder_details</t>
                <form action="/mes_wc_working/done/" method="POST">
                    <input name="csrf_token" type="hidden" t-att-value="request.csrf_token()"/>
                    <input name="wc_id" type="hidden" t-att-value="workcenter.id"/>
                    <input name="productivity_id" type="hidden" t-att-value="productivity.id"/>
                    <div class="row my-3">
                        <div class="col-2 d-flex align-items-center" align="center">
                            <button name="btn"
                                    class="btn cursor_evi"
                                    type="submit"
                                    style="background-color:blue; color:white;"
                                    value="back"
                                    >
                                <span class="fa fa-arrow-left fa-2x"/>
                                <br/>
                                <span style="font-weight: bold; vertical-align: middle;">Workcenters</span>
                            </button>
                        </div>
                        <div class="col-4 rounded d-flex align-items-center"
                             style="background-color:LightGray;">
                            <span style="opacity: .5; font-size: .8em; position: absolute; top: 0px;">
                                Workcenter [ID <t t-esc="wo.workcenter_id.id"/>]
                                </span>
                            <h4>
                                <t t-esc="wo.workcenter_id.name"/>
                                <t t-if="wo.workcenter_id.code">
                                    (<span style="font-weight: bold;"><t t-esc="wo.workcenter_id.code"/></span>)
                                </t>
                            </h4>
                        </div>
                        <div class="col-2 rounded d-flex align-items-center"
                             style="background-color:lightgreen; color:black;">
                            <span style="opacity: .5; font-size: .8em; position: absolute; top: 0px;">
                                Workorder
                                </span>
                            <h4>
                                ID <t t-esc="wo.id"/>
                            </h4>
                        </div>
                        <div class="col-2 d-flex align-items-center">
                            <t t-if="data_start_msec">
                                <h4 id="timer" t-att-data-value="data_start_msec"/>
                                </t>
                            <t t-if="not data_start_msec">
                                <h4 id="timer" data-value=""/>
                                </t>
                        </div>
                        <div class="col-2 d-flex align-items-center justify-content-end">
                            <button name="action"
                                    type="submit"
                                    class="btn cursor_evi"
                                    style="background-color:red; color:white;"
                                    value="block">
                                <span style="font-weight: bold; vertical-align: middle; font-size: 1.5em;">Stop</span>
                                <span class="fa fa-exclamation-triangle fa-2x" style="vertical-align: middle;"/>
                            </button>
                        </div>
                    </div>

                    <div class="row my-3">
                        <t t-foreach="productivity.employee_ids" t-as="employee">
                            <div class="bg-primary rounded col d-flex align-items-center mx-1">
                                <h4>
                                    <t t-esc="employee.employee_id.name"/>
                                </h4>
                            </div>
                        </t>
                        <div class="col-1 d-flex align-items-center justify-content-end">
                            <button name="btn"
                                    type="submit"
                                    class="btn btn-primary fa fa-users fa-2x"
                                    value="employees"/>
                        </div>
                    </div>

                    <t t-if="state=='working'">
                        <div class="row my-3">
                            <div class="col-1 d-flex align-items-center">
                                <div name="start_wo2"
                                     class="btn"
                                     style="background-color:green; color:white;">
                                    <span class="fa fa-play fa-2x"/>
                                </div>
                            </div>
                            <div class="col-6 rounded d-flex align-items-center"
                                 style="background-color:green">
                                <h4>Working</h4>&#160;
                                <span style="font-weight: bold;"><t t-esc="wo.name"/></span>&#160;
                                [<t>ID</t> <t t-esc="wo.id"/>]
                            </div>
                        </div>
                    </t>

                    <t t-if="state=='preparation'">
                        <div class="row my-3">
                            <div class="col-1 d-flex align-items-center">
                                <div name="setup_wo2"
                                     class="btn"
                                     style="background-color:orange; color:white;">
                                    <span class="fa fa-wrench fa-2x"/>
                                </div>
                            </div>
                            <div class="col-6 rounded d-flex align-items-center"
                                 style="background-color:orange">
                                <h4>Working</h4>&#160;
                                <span style="font-weight: bold;"><t t-esc="wo.name"/></span>&#160;
                                [<t>ID</t> <t t-esc="wo.id"/>]
                            </div>
                        </div>
                    </t>

                    <div class="row my-3">
                        <div class="col-9">
                            <div class="row">
                                <div class="col-3" style="font-weight:strong;">
                                    <span style="font-weight:strong;">Manuf.Order</span>
                                </div>
                                <div class="col">
                                    <t t-esc="wo.production_id.name"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <span style="font-weight:strong;">Product</span>
                                </div>
                                <div class="col">
                                    <t t-esc="wo.product_id.display_name"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"
                                     style="font-weight:strong;">
                                    <span style="font-weight:strong;">Planned Start</span>
                                </div>
                                <div class="col">
                                    <t t-if="wo.date_planned_start">
                                        <span t-esc="website.local_time(wo.date_planned_start).strftime('%d/%m/%Y %H:%M')"/>
                                    </t>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"
                                     style="font-weight:strong;">
                                    <span style="font-weight:strong;">Planned Finished</span>
                                </div>
                                <div class="col">
                                    <t t-if="wo.date_planned_finished">
                                        <span t-esc="website.local_time(wo.date_planned_finished).strftime('%d/%m/%Y %H:%M')"/>
                                    </t>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"
                                     style="font-weight:strong;">
                                    <span style="font-weight:strong;">Expected Duration</span>
                                </div>
                                <div class="col">
                                    <t t-esc="website.secs_to_hrs(wo.duration_expected)"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"
                                     style="font-weight:strong;">
                                    <span style="font-weight:strong;">Duration</span>
                                </div>
                                <div class="col">
                                    <t t-esc="website.secs_to_hrs(wo.duration)"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"
                                     style="font-weight:strong;">
                                    <span style="font-weight:strong;">Quantity to Do</span>
                                </div>
                                <div class="col">
                                    <t t-esc="int(wo.qty_production)"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"
                                     style="font-weight:strong;">
                                    <span style="font-weight:strong;">Quantity Done</span>
                                </div>
                                <div class="col">
                                    <t t-esc="int(wo.qty_produced)"/>
                                </div>
                            </div>
                        </div>

                        <div class="col-3 d-flex align-items-center justify-content-center">
                                <img t-att-src="'/web/image/product.template/%s/image_1920' % wo.product_id.product_tmpl_id.id"
                                     style="height:160px;width:160px;"
                                     alt="Product"/>
                        </div>
                    </div>
                    <div class="row my-3 rounded"
                         style="background-color:LightGray;color:black">
                        <div class="col">
                            <t t-esc="wo.product_id.description"/>
                        </div>
                    </div>
                    <t t-if="error">
                        <div class="alert alert-danger" role="alert">
                            <t t-esc="error"/>
                        </div>
                    </t>

                    <t t-if="state=='working'">
                        <div id="controls">
                            <div class="row">
                                <div class="col-3">
                                    Quantity Producing (<span t-esc="int(wo.qty_production) - int(wo.qty_produced)"/>)
                                </div>
                                <div class="col-3">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <button id="qty_ok_minus"
                                                    type="button"
                                                    class="btn btn-lg btn-outline-success fa fa-minus"
                                                    />
                                        </div>
                                        <input id="qty_ok"
                                               name="pcs_ok"
                                               type="number"
                                               class="form-control form-control-lg"
                                               autofocus="autofocus"
                                               autocomplete="off"/>
                                        <div class="input-group-append">
                                            <button id="qty_ok_plus"
                                                    type="button"
                                                    class="btn btn-lg btn-outline-success fa fa-plus"
                                                    />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-3">
                                    Quantity Scraps
                                </div>
                                <div class="col-3">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <button id="qty_ko_minus"
                                                    type="button"
                                                    class="btn btn-lg btn-outline-danger fa fa-minus"
                                                    />
                                        </div>
                                        <input id="qty_ko"
                                               name="pcs_ko"
                                               type="number"
                                               class="form-control form-control-lg"
                                               autofocus="autofocus"
                                               autocomplete="off"/>
                                        <div class="input-group-append">
                                            <button id="qty_ko_plus"
                                                    type="button"
                                                    class="btn btn-lg btn-outline-danger fa fa-plus"
                                                    />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col d-flex align-items-center">
                                    <button name="btn"
                                            type="submit"
                                            class="btn my-3 btn-lg btn-block btn-success"
                                            value="record_production"
                                            >
                                        <h4>Record Production</h4>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>

                    <t t-if="state=='preparation'">
                        <div id="controls">
                            <div class="row">
                                <div class="col d-flex align-items-center">
                                    <button name="btn"
                                            type="submit"
                                            class="btn my-3 btn-lg btn-block btn-warning"
                                            value="record_setup"
                                            >
                                        <h4>Record Setup</h4>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>

                    <h1>iframe wo.production_id.worksheet DISABLED</h1>
                    <!--
                    <iframe id="iframe_production_worksheet"
                            frameborder="0"
                            width="100%" height="500px"
                            t-if="wo.production_id.worksheet"
                            t-attf-src="/web/static/lib/pdfjs/web/viewer.html?file=%2Fweb%2Fimage%3Fmodel%3Dmrp.production%26field%3Dworksheet%26id%3D{{wo.production_id.id}}#page=1" />
                    -->
                    <h1>iframe iframe_workorder_worksheet</h1>
                    <iframe id="iframe_workorder_worksheet"
                            frameborder="0"
                            width="100%" height="500px"
                            t-if="wo.worksheet"
                            t-attf-src="/web/static/lib/pdfjs/web/viewer.html?file=%2Fweb%2Fimage%3Fmodel%3Dmrp.workorder%26field%3Dworksheet%26id%3D{{wo.id}}#page=1" />
                </form>
            </t>
        </t>
        <script>
        <!-- _todo_ trovare come eseguirlo su onready della pagina-->
            $("#qty_ok_plus").onclick = qty_ok_plus;
            $("#qty_ok_minus").onclick = qty_ok_minus;
            $("#qty_ko_plus").onclick = qty_ko_plus;
            $("#qty_ko_minus").onclick = qty_ko_minus;

            myTimer()
            var myVar = setInterval(myTimer, 1000);
        </script>
    </template>

</odoo>
