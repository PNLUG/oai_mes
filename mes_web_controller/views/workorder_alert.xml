<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- _todo_ cambiare nome workorder_alert -->
    <template id="workorder_alert">
        <script type="text/javascript" src="/mes_web_controller/static/src/js/mes_web_controller.js"></script>
        <link rel="stylesheet" href="/mes_web_controller/static/src/css/mes_web_controller.css"/>
        <t t-call="web.html_container">
            <div class="container">
                <t>_!!!_ vista workorder_alert</t>
                <form action="/mes_wc_working/alert/" method="POST">
                    <input name="csrf_token" type="hidden" t-att-value="request.csrf_token()"/>
                    <input name="workcenter_id" type="hidden" t-att-value="workcenter.id"/>
                    <input name="productivity_id" type="hidden" t-if="productivity" t-att-value="productivity.id"/>

                    <!-- header -->
                    <div class="row my-3">
                        <div class="col-10 d-flex align-items-left" align="left">
                            <button name="action"
                                    class="btn cursor_evi"
                                    type="submit"
                                    style="background-color:lightgray; color:black; text-align: left;"
                                    value="workcenter"
                                    >
                                <span style="opacity: .7; font-size: .8em;">
                                    <span class="fa fa-arrow-left fa-2x"
                                    /> Workcenter [ID <t t-esc="workcenter.id"/>]
                                    </span>
                                <h4>
                                    <t t-esc="workcenter.name"/>
                                    <t t-if="workcenter.code">
                                        (<span style="font-weight: bold;"><t t-esc="workcenter.code"/></span>)
                                    </t>
                                </h4>
                            </button>
                        </div>
                        <div class="col-2 d-flex align-items-center" align="center">
                            <button name="action"
                                    class="btn cursor_evi"
                                    type="submit"
                                    style="background-color:blue; color:white;"
                                    value="wc_list"
                                    >
                                <span style="font-weight: bold; vertical-align: middle;">Workcenters<br/>list</span>
                            </button>
                        </div>
                    </div>
                    <div class="row my-3">
                        <div class="col-8 rounded d-flex align-items-center"
                             style="background-color:lightgreen; color:black;">
                            <button class="btn">
                                <span style="opacity: .7; font-size: .8em;">
                                    Workorder [ID <t t-esc="wo.id"/>]
                                    </span>
                                <h4>
                                    <t t-esc="wo.name"/>
                                </h4>
                            </button>
                        </div>
                        <div class="col-2 align-items-center">
                            <t>Elapsed time</t><br/>
                            <t t-if="data_start_msec">
                                <h4 id="timer" t-att-data-value="data_start_msec"/>
                                </t>
                            <t t-if="not data_start_msec">
                                <h4 id="timer" data-value=""/>
                                </t>
                        </div>
                        <div class="col-2 d-flex align-items-center justify-content-end">
                            <button name="action"
                                    type="submit"
                                    class="btn cursor_evi"
                                    style="background-color:red; color:white;"
                                    value="block">
                                <span style="font-weight: bold; vertical-align: middle; font-size: 1.5em;">Stop</span>
                                <span class="fa fa-exclamation-triangle fa-2x" style="vertical-align: middle;"/>
                            </button>
                        </div>
                    </div>
                    <!-- Sblocca -->
                    <t t-if="productivity">
                        <t>_!!!_ sezione productivity</t>
                        <div class="row my-3">
                            <t t-foreach="employee_ids" t-as="employee">
                                <div class="bg-primary rounded col d-flex align-items-center mx-1">
                                    <h4>
                                        <t t-esc="employee.employee_id.name"/>
                                    </h4>
                                </div>
                            </t>
                            <div class="col-1 d-flex align-items-center justify-content-end">
                                <button name="action"
                                        type="submit"
                                        class="btn btn-primary fa fa-users fa-2x"
                                        value="employees"
                                        />
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col-1 d-flex align-items-center">
                                <div name="action"
                                     class="btn"
                                     style="background-color:red;color:white;"
                                     value="alert_wo">
                                    <span class="fa fa-exclamation-triangle fa-2x"/>
                                </div>
                            </div>
                            <div class="col-8 d-flex align-items-center">
                                <h4>
                                    <t t-esc="productivity.loss_id.name"/>
                                </h4>
                            </div>
                            <div class="col-3 rounded d-flex align-items-center" style="background-color:red">
                                <h4>Alert</h4>
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col">
                                <button name="action"
                                        type="submit"
                                        class="btn btn-lg btn-block btn-danger"
                                        value="unblock">
                                    Unblock
                                </button>
                            </div>
                        </div>
                    </t>
                    <!-- Blocca -->
                    <t t-if=" productivity">
                        <t>_!!!_ sezione NON productivity</t>
                        <t t-if="error">
                            <div class="alert alert-danger" role="alert">
                                <t t-esc="error"/>
                            </div>
                        </t>
                        <div class="row my-3 justify-content-between">
                            <div class="col-1 d-flex align-items-center">
                                <div name="action"
                                     class="btn"
                                     style="background-color:red;color:white;"
                                     value="alert_wo">
                                    <span class="fa fa-exclamation-triangle fa-2x"/>
                                </div>
                            </div>
                            <div class="col-8 d-flex align-items-center">
                                <h4>Open
                                    <t t-esc="workcenter.count_open_wo"/>
                                </h4>
                            </div>
                            <div class="col-3 rounded d-flex align-items-center" style="background-color:red">
                                <h4>Alert</h4>
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col">
                                <input name="alert_id"
                                       type="text"
                                       class="form-control form-control-lg"
                                       autofocus="autofocus"
                                       autocomplete="off"
                                       placeholder="Alert id"/>
                            </div>
                        </div>
                        <t>_!!!_ sezione pulsanti alert</t>
                        <div class="row my-3">
                            <div class="col">
                                <t t-foreach="alerts" t-as="alert">
                                    <button name="loss_id"
                                            type="submit"
                                            class="btn btn-danger btn-lg btn-block mb8"
                                            t-attf-value="{{alert.id}}"
                                            >
                                        <t t-esc="alert.id"/>
                                        -
                                        <t t-esc="alert.name"/>
                                    </button>
                                </t>
                            </div>
                        </div>
                    </t>
                </form>
            </div>
        </t>
         <script>
            $(window).ready(function(){
                myTimer({id: 'timer'})
                var myVar = setInterval(function(){myTimer({id: 'timer'});}, 1000);
                });
        </script>
    </template>

</odoo>
