<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="alert_list">
        <t t-call="web.html_container">
            <style>
                h4 {
                margin-bottom:initial;
                }
            </style>
            <div class="container">
                <form action="/mobile_mrp_working/alert/" method="POST">
                    <input name="csrf_token" type="hidden" t-att-value="request.csrf_token()"/>
                    <input name="workcenter_id" type="hidden" t-att-value="workcenter.id"/>
                    <input name="productivity_id" type="hidden" t-if="productivity" t-att-value="productivity.id"/>
                    <div class="row my-3">
                        <div class="col-9 d-flex align-items-center" style="background-color:LightGray;">
                            <h4>Workcenter [<t t-esc="workcenter.code"/>]
                                <t t-esc="workcenter.name"/>
                            </h4>
                        </div>
                        <div class="col-2 d-flex align-items-center">
                            <t t-if="data_start_msec">
                                <h4 id="timer" t-att-data-value="data_start_msec"/>
                            </t>
                        </div>

                        <div class="col-1">
                            <div name="alert_wo"
                                 class="btn"
                                 style="background-color:red;color:white;">
                                <span class="fa fa-exclamation-triangle fa-2x"/>
                            </div>
                        </div>
                    </div>

                    <!-- Sblocca -->
                    <t t-if="productivity">
                        <div class="row my-3">
                            <t t-foreach="employee_ids" t-as="employee">
                                <div class="bg-primary rounded col d-flex align-items-center mx-1">
                                    <h4>
                                        <t t-esc="employee.employee_id.name"/>
                                    </h4>
                                </div>
                            </t>
                            <div class="col-1 d-flex align-items-center justify-content-end">
                                <button name="btn"
                                        type="submit"
                                        class="btn btn-primary fa fa-users fa-2x"
                                        value="employees"
                                        />
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col-1 d-flex align-items-center">
                                <div name="alert_wo"
                                     class="btn"
                                     style="background-color:red;color:white;">
                                    <span class="fa fa-exclamation-triangle fa-2x"/>
                                </div>
                            </div>
                            <div class="col-8 d-flex align-items-center">
                                <h4>
                                    <t t-esc="productivity.loss_id.name"/>
                                </h4>
                            </div>
                            <div class="col-3 rounded d-flex align-items-center" style="background-color:red">
                                <h4>Alert</h4>
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col">
                                <button name="unblock"
                                        type="submit"
                                        class="btn btn-lg btn-block btn-danger"
                                        value="1">
                                    Unblock
                                </button>
                            </div>
                        </div>
                    </t>
                    <!-- Blocca -->
                    <t t-if="not productivity">
                        <div class="row my-3 justify-content-between">
                            <div class="col-1 d-flex align-items-center">
                                <div name="alert_wo"
                                     class="btn"
                                     style="background-color:red;color:white;">
                                    <span class="fa fa-exclamation-triangle fa-2x"/>
                                </div>
                            </div>
                            <div class="col-8 d-flex align-items-center">
                                <h4>Open
                                    <t t-esc="workcenter.count_open_wo"/>
                                </h4>
                            </div>
                            <div class="col-3 rounded d-flex align-items-center" style="background-color:red">
                                <h4>Alert</h4>
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col">
                                <input name="barcode3"
                                       type="text"
                                       class="form-control form-control-lg"
                                       autofocus="autofocus"
                                       autocomplete="off"
                                       placeholder="Alert id"/>
                            </div>
                        </div>
                        <t t-if="error">
                            <div class="alert alert-danger" role="alert">
                                <t t-esc="error"/>
                            </div>
                        </t>
                        <div class="row my-3">
                            <div class="col">
                                <t t-foreach="alerts" t-as="alert">
                                    <button name="loss_id"
                                            type="submit"
                                            class="btn btn-danger btn-lg btn-block mb8"
                                            t-attf-value="{{alert.id}}"
                                            >
                                        <t t-esc="alert.id"/>
                                        -
                                        <t t-esc="alert.name"/>
                                    </button>
                                </t>
                            </div>
                        </div>
                    </t>
                </form>
            </div>
        </t>
        <script>
            /* _todo_ spostare in libreria static */
            /* timer */

            function msToTime(s) {

                function pad(n, z) {
                    z = z || 2;
                    return ('00' + n).slice(-z);
                    }

                var ms = s % 1000;
                s = (s - ms) / 1000;
                var secs = s % 60;
                s = (s - secs) / 60;
                var mins = s % 60;
                var hrs = (s - mins) / 60;
                return pad(hrs) + ':' + pad(mins) + ':' + pad(secs);
                }

            function myTimer() {
                var now = new Date();
                var start = new Date(parseInt($("#timer").data('value')));
                t = now-start;
                $("#timer").html(msToTime(t));
                }

            myTimer()
            var myVar = setInterval(myTimer, 1000);
        </script>
    </template>

</odoo>
